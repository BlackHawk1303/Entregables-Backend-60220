<div class="form-container">
    <h1>Registro</h1>
    <form id="registerForm" action="/users/register" method="post">
        <label for="first_name">Nombre</label>
        <input name="first_name" id="first_name" type="text" required placeholder="Ingrese su Nombre">
        <br />
        <label for="last_name">Apellido</label>
        <input name="last_name" id="last_name" type="text" required placeholder="Ingrese su Apellido">
        <br />
        <label for="email">Email</label>
        <input name="email" id="email" type="email" required autocomplete="email" placeholder="ejemplo@correo.com">
        <br />
        <label for="age">Edad</label>
        <input name="age" id="age" required placeholder="Ingrese su Edad">
        <br />
        <label for="password">Contraseña</label>
        <input type="password" name="password" id="password" required autocomplete="new-password" placeholder="Ingrese Contraseña">
        <br />
        <label for="confirmPassword">Confirmar Contraseña</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required autocomplete="new-password" placeholder="Ingrese Nuevamente su Contraseña">
        <br />
        <input type="submit" value="Registrar">
    </form>
    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}
    <p>¿Ya Tienes una Cuenta Creada? <a href="/login">Inicia Sesión Aquí</a></p>
</div>

<script src="/js/register.js"></script>

<style>
    /* Estilos globales */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: #f4f4f4;
        color: #333;
    }

    /* Estilos para el contenedor de formulario */
    .form-container {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .form-container h1 {
        text-align: center;
    }

    .form-container label {
        margin-bottom: 5px;
        display: block;
        color: #333;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 14px;
    }

    .form-container input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
        font-size: 16px;
    }

    .form-container input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .form-container a {
        display: inline-block;
        margin-top: 10px;
        text-align: center;
        width: 100%;
        color: #007bff;
        text-decoration: none;
    }

    .form-container a:hover {
        text-decoration: underline;
    }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
        font-size: 14px;
    }
</style>
